@model CustomerContactManagement.ViewModels.CustomerViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-4">
    <form id="editForm" action="Edit" enctype="multipart/form-data">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="CustomerId" value="@Model.CustomerId" />
        <input type="hidden" name="OldImageUrl" value="@Model.ImageUrl" />
        <div class="row">
            <div class="col-md-6">
                <h2> Student Information</h2>
                <div class="form-group mb-2">
                    @Html.LabelFor(model => model.CustomerName, htmlAttributes: new { @class = "control-label col-md-3" })
                    @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group mb-2">
                    @Html.LabelFor(model => model.DateOfBirth, htmlAttributes: new { @class = "control-label col-md-3" })
                    @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                </div>
                <div class="form-group mb-2">
                    @Html.LabelFor(model => model.MobileNo, htmlAttributes: new { @class = "control-label col-md-3" })
                    @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "text-danger" })
                </div>
                <div class="form-group mb-2">
	                @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-3" })
	                @Html.EditorFor(model => model.IsActive)
	                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                </div>
                <div class="form-group mb-2">
	                @Html.LabelFor(model => model.DepositeAmount, htmlAttributes: new { @class = "control-label col-md-3" })
	                @Html.EditorFor(model => model.DepositeAmount, new { htmlAttributes = new { @class = "form-control" } })
	                @Html.ValidationMessageFor(model => model.DepositeAmount, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-2">
                    @Html.LabelFor(model => model.CustomerTypeId, htmlAttributes: new { @class = "control-label col-md-3" })
                    @Html.DropDownListFor(model => model.CustomerTypeId, new SelectList(Model.CustomerTypes, "CustomerTypeId", "CustomerTypeName"), "Select Course", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CustomerTypeId, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-2">
                    <img id="imageFile" src="~/Images/@Model.ImageUrl" width="125" height="125" style="border:1px;margin-top:20px;" />
                    @Html.LabelFor(model => model.ProfileFile, htmlAttributes: new { @class = "control-label col-md-3" })
                    <input onchange="readUrl(this)" type="file" name="ProfileFile" id="ProfileFile" class="invisible" />
                </div>
            </div>
            <div class="col-md-6">
                <h2> Address Information</h2>
                <button onclick="AddAddresses()" type="button" class="btn btn-warning mb-2">Add Address</button>
                @Html.Partial("AddAddresses", Model.Addresses)
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-end">
                <a href="@Url.Action("Index","Customers")" class="btn btn-primary">Back To List</a>
                <input type="submit" value="Update" class="btn btn-success" />
            </div>
        </div>
    </form>
</div>
<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script>
    function readUrl(i) {
        if (i.files && i.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $("#imageFile").attr('src', e.target.result)
            }
            reader.readAsDataURL(i.files[0]);
        }
    }
    function deleteRow(btn) {
        $(btn).closest('tr').remove();
        updateAddressIndex();
    }
    function AddAddresses() {
        var lastIndex = parseInt($('#HIndex').val());
        var newRow = `<tr> <td>
        <input type="text" name="Addresses[${lastIndex}].AddressType" value="" class="form-control" /></td><td>
         <input type="text" name="Addresses[${lastIndex}].City" value="" class="form-control" /></td><td>
         <input type="text" name="Addresses[${lastIndex}].State" value="" class="form-control" /></td><td>
           <button type="button" class="btn btn-danger" onclick="deleteRow(this)">Delete</button>
         </td></tr>  `;
        $("#ExTable tbody").append(newRow);
        $('#HIndex').val(lastIndex + 1);
        updateAddressIndex();
    }

    function updateAddressIndex() {
        $("#ExTable tbody tr").each(function (index) {
            $(this).find("input[name^='Addresses']").each(function () {
                var name = $(this).attr("name");
                name = name.replace(/Addresses\[\d+\]/, "Addresses[" + index + "]");
                $(this).attr("name", name)
            })
        })
    }
    $("#editForm").submit(function (event) {
        event.preventDefault();
        var formData = new FormData(this);
        $.ajax(
            {
                type: "POST",
                url: "/Customers/Edit",
                contentType: false,
                processData: false,
                data: formData,
                success: function (response) {
                    if (response.success) {
                        alert("Edited Successfully");
                        window.location.href = "/Customers/Index";
                    }
                    else {
                        alert("Validation Error");
                        console.log(response.error);
                    }

                },
                error: function (error) {
                    alert("Error");

                }
            }

        )
    })
</script>

